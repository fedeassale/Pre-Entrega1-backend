

<h1>Productos</h1>
<div class="container">
    {{#each productos}}
    <div class="card">
        <h2>{{this.title}}</h2>
        <figure>{{this.description}}</figure>
        <p>{{this.price}}</p>
        <p>{{this.category}}</p>
        <button>Agregar al Carrito</button>
    </div>
    {{/each}}
</div>

{{#if hasPrevPage}}
<a href="/products?page={{prevPage}}">Anterior</a>
{{/if}}

{{#if hasNextPage}}
<a href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}

<p>{{currentPage}} / {{totalPages}} </p>